@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "/Views/Shared/_LayoutNoFooterNav.cshtml";
}

<h1 class="center-text">Admin Dashboard</h1>

<div>
    <ul class="list-group list-group-horizontal justify-content-center">
        <li class="list-group-item"><a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Main</a></li>
        <li class="list-group-item"><a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="ManageOrders">Manage Orders</a></li>
        <li class="list-group-item"><a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="ManageProducts">Manage Products</a></li>
        <li class="list-group-item"><a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="ManageUsers">Manage Users</a></li>
