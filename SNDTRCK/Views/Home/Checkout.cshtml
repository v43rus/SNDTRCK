@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
    var quantityWord = @Model.OrderQuantity == 1 ? "ITEM" : "ITEMS"; //condition ? "trueResult" : "falseResult"
}

<main id="checkout-main">
        
    <h1 id="checkout-header">Checkout</h1>

    <div id="order-detail-container">
        <p class="order-detail"><span class="countUp">@Model.OrderQuantity</span> @quantityWord FOR</p>
        <p class="order-detail"><span class="countUp">@Model.OrderValue</span> KR</p>
    </div>
    
    <form id="checkout-grid-container">
        <input type="text" placeholder="First name" id="fName" name="fName" class="checkout-grid-item" required/>        
        
        <input type="text" placeholder="Last name" id="lName" name="lName" class="checkout-grid-item" required/>
        
        <input type="text" placeholder="Address" id="address" name="address" class="checkout-grid-item" required/>

        <input type="number" maxlength="5" placeholder="Postal code" id="pCode" name="pCode" class="checkout-grid-item" required/>

        <input type="text" placeholder="City" id="city" name="city" class="checkout-grid-item" required/>

        <input type="tel" placeholder="Phone number" id="telNumber" name="telNumber" class="checkout-grid-item" required/>

        <input type="email" placeholder="Email address" id="email" name="email" class="checkout-grid-item" required/>

    </form>

    <aside id="proceed-to-checkout-container">
        <a>Place order <img src="/media/icons/thin-arrow-right.png" id="cart-checkout-arrow" /></a>
    </aside>
</main>

<script src="~/js/Checkout.js" asp-append-version="true"></script>