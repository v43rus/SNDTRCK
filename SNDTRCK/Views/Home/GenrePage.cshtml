@model List<SNDTRCK.Models.Product>
@{
    ViewData["Title"] = $"{@ViewBag.Query}:";
}

<main id="ResultsPage-main"> 

    <h1>@ViewBag.Query:</h1>

    <article id="search-results-container"> 

        @if(Model.Any()){

            @foreach(var product in Model){
                <a class="search-result" asp-controller="Product" asp-action="Product" asp-route-productId="@product.ProductId">
                    <img src="/@product.CoverImageLink" alt="@product.Title"/>
                    <h3>@product.Title - @product.Artist</h3>
                    <p><span class="color-of-price">@product.Price</span> kr</p>
                </a>
            }

        }
        else{
            <h3 id="no-results-h3">No results, <a href="/">return to the startpage</a></h3>
        }
    </article>
    
   
</main>

